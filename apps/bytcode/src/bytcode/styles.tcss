/* bytcode Terminal UI Styles */

/* --- Main Workflow Screen --- */

#phase-sidebar {
    width: 28;
    height: 100%;
    background: $surface;
    border-right: solid $primary-darken-1;
    padding: 1 1;
}

#main-content {
    height: 100%;
}

#summary-panel {
    display: none;
    height: 2fr;
    min-height: 6;
    background: $surface-darken-1;
    border: solid $accent-darken-1;
    padding: 0 1;
    overflow-y: auto;
}

#summary-handle {
    display: none;
}

#main-panel {
    height: 1fr;
    min-height: 6;
    background: $surface-darken-1;
    border: solid $primary-darken-1;
    padding: 0 1;
}

#live-log {
    height: 1fr;
    min-height: 4;
    background: $surface-darken-2;
    border: solid $primary-darken-2;
    padding: 0 1;
}

/* --- Resize Handles --- */

ResizeHandle.-vertical {
    height: 1;
    width: 100%;
    background: $surface-lighten-1;
    content-align: center middle;
    color: $text-muted;
}

ResizeHandle.-vertical:hover {
    background: $primary;
    color: $text;
}

ResizeHandle.-vertical.-dragging {
    background: $primary-lighten-1;
    color: $text;
}

ResizeHandle.-horizontal {
    width: 1;
    height: 100%;
    background: $surface-lighten-1;
}

ResizeHandle.-horizontal:hover {
    background: $primary;
}

ResizeHandle.-horizontal.-dragging {
    background: $primary-lighten-1;
}

/* --- Setup Screen (Modal) --- */

SetupScreen {
    align: center middle;
}

#setup-container {
    width: 60;
    height: auto;
    max-height: 90%;
    overflow-y: auto;
    background: $surface;
    border: tall $primary;
    padding: 1 2;
}

#setup-title {
    width: 100%;
    text-align: center;
    text-style: bold;
    padding: 0 0 1 0;
}

#setup-container > Label {
    margin: 1 0 0 0;
    height: 1;
}

#setup-container Select {
    width: 100%;
}

#setup-container RadioSet {
    width: 100%;
    height: auto;
}

#btn-start {
    margin: 1 0 0 0;
    width: 100%;
}

/* --- Resume Screen (Modal) --- */

ResumeScreen {
    align: center middle;
}

#resume-container {
    width: 60;
    height: auto;
    max-height: 90%;
    overflow-y: auto;
    background: $surface;
    border: tall $warning;
    padding: 1 2;
}

#resume-title {
    width: 100%;
    text-align: center;
    text-style: bold;
    padding: 0 0 1 0;
}

#resume-buttons {
    margin: 1 0 0 0;
}

#resume-buttons Button {
    width: 100%;
    margin: 0 0 1 0;
}

/* --- Feedback Screen (Modal) --- */

FeedbackScreen {
    align: center middle;
}

#feedback-container {
    width: 60;
    height: auto;
    background: $surface;
    border: tall $primary;
    padding: 1 2;
}

/* --- Rollback Screen (Modal) --- */

RollbackScreen {
    align: center middle;
}

#rollback-container {
    width: 60;
